@using hacimehmetli.Models.Entity
@foreach (var topseller in Model)
{
    <div class="col-md-4">
        <div class="ftco-owl">
            <div class="item">
                <div class="media d-block mb-4 text-center ftco-media ftco-animate border-0">
                    <a href="@Url.Action("Urun", "Urunler" , new { id = topseller.id })">
                        <img src="@topseller.productphotourl" alt="@topseller.productphotourl" class="img-fluid">
                        </a>
                    <div class="media-body p-md-5 p-4">
                        
                        <h6>@topseller.productporsiyon</h6>
                        <a href="@Url.Action("Urun", "Urunler" , new { id = topseller.id })">
                            <h5 class="mt-0 h4" style="height:85px;">@topseller.productname</h5>
                            </a>
                        <p class="mb-4" style="height:120px;">
                            @MvcHtmlString.Create(topseller.productdescription.Length > 100 ? topseller.productdescription.ToString().Substring(0, 100) + "..." : topseller.productdescription.ToString() + "...")
                        </p>

                            
                    </div>
                </div>
            </div>
        </div>
    </div>
}
